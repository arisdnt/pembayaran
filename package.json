{
  "name": "artapay",
  "productName": "ArtaPay",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:tauri",
    "dev:vite": "vite",
    "dev:tauri": "tauri dev",
    "build": "vite build && tauri build",
    "build:windows": "vite build && tauri build --no-bundle --target x86_64-pc-windows-gnu",
    "prepare:portable": "mkdir -p dist-windows && cp src-tauri/target/x86_64-pc-windows-gnu/release/app.exe dist-windows/artapay.exe && cp src-tauri/target/x86_64-pc-windows-gnu/release/WebView2Loader.dll dist-windows/",
    "sign:portable": "node -e \"if (process.platform==='win32'){require('child_process').spawn('cmd',['/c','dist-windows\\setup-sign-and-trust.cmd'],{stdio:'inherit'}).on('exit',c=>process.exit(c||0));} else {console.log('Skipping code signing (not Windows host)')}\"",
    "zip:portable": "zip -r artapay-portable-windows-x64.zip dist-windows/",
    "build:portable": "npm run build:windows && npm run prepare:portable && npm run sign:portable && npm run zip:portable",
    "package:portable": "npm run build:portable",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "@supabase/supabase-js": "^2.58.0",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-fs": "^2.4.2",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.8",
    "dexie-react-hooks": "^1.1.7",
    "lucide-react": "^0.544.0",
    "nanoid": "^5.0.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tauri-apps/cli": "^2.8.4",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.13",
    "terser": "^5.44.0",
    "vite": "^7.1.7"
  }
}
